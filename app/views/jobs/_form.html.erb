<%= form_for @job do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resume.errors.count, "error") %> prevented this resume from being uploaded: </h2>
      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label 'Position Name' %><br>
    <%= f.text_field :position, :placeholder=>"Position", :required=>'required' %>
  </div>
  <div class="field">
    <%= f.label 'Description (optional)' %><br>
    <%= f.text_field :description, :placeholder=>"Description" %>
  </div>
  <div class="field">
    <%= f.label 'Redirect Link (optional)' %><br>
    <%= f.text_field :hyperlink, :placeholder=>"http://example.com" %>
  </div>
  <div class="field">
    <%= f.label 'Upload Job'%><br>
    <%= f.file_field :attachment, :required=>'required' %>
  </div>
  <div class="field">
    <%= f.radio_button :job_type, 'Full-Time', :required=>'required' %>Full-Time
    <%= f.radio_button :job_type, 'Part-Time', :required=>'required'  %>Part-Time
    <%= f.radio_button :job_type, 'Internship', :required=>'required' %>Internship
  </div>   
  <div class="field">
    <%= f.submit 'Post Job', :class=>"button"%>
  </div>
<% end %>
