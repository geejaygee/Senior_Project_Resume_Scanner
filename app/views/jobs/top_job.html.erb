<div class="row align-center">
  <div class="column small-6 text-center">
    <h3> Your top 5 job matches </h3>
  </div>
</div>
<div class="row align-center">
  <div class="column small-12 text-center">
<%=@industry_hash%>
<table class="table">
  <thread>
    <tr>
      <th style="text-align: center"> Position </th>
      <th style="text-align: center"> Company </th>
      <th style="text-align: center"> Match </th>
    </tr>
  </thread>
  <tbody>
<% @tophash.each do |top| %>
  <tr>
  <td style="text-align: center">  <%=link_to top[1][1].position, top[1][1], :method=>:get %> </td>
  <td style="text-align: center"> <%= top[1][1].employer.companyName %> </td>
  <td style="text-align: center"> <%= (top[1][0])%>% </td>
  </tr>
<% end %>
  </tbody>
</table>
  </div>
</div>
